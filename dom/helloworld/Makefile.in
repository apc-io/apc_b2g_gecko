DEPTH = @DEPTH@
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/config/autoconf.mk


# MODULE specifies where header files from this Makefile are installed
# Use dom if your component implements a DOM API
MODULE = dom

# Name of the typelib
XPIDL_MODULE = dom_helloworld

# Set to 1 if the module should be part of the Gecko Runtime common to all applications
GRE_MODULE = 1
# MODULE           = dom
# LIBRARY_NAME     = domhelloworld_s
# XPIDL_MODULE     = dom_helloworld
# LIBXUL_LIBRARY   = 1
# FORCE_STATIC_LIB = 1

EXTRA_COMPONENTS = \
  HelloWorld.js \
  HelloWorld.manifest \
  $(NULL)

# The IDL sources
XPIDLSRCS = \
 HelloWorld.idl \
 $(NULL)

include $(topsrcdir)/config/rules.mk

XPIDL_FLAGS += \
 -I$(topsrcdir)/dom/interfaces/base \
 -I$(topsrcdir)/dom/interfaces/events \
 $(NULL)
